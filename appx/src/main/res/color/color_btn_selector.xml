<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--     本xml必须放到clor文件夹才会有智能提示  默认颜色是黑色  选中 获取焦点 或者是按下都是某个颜色   下面的是正常的黑色-->
    <item android:state_focused="true" android:color="@color/colorThemeBlack" />
    <item android:state_checked="true" android:color="@color/colorThemeBlack" />
    <item android:state_pressed="true" android:color="@color/colorThemeBlack" />

    <item android:color="@color/colorThemeGray"></item>

</selector>
